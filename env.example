# Environment variables for AI-Coder
# Copy this file to .env and modify as needed

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# Backend Configuration
BACKEND_PORT=3000
BACKEND_HOST=localhost

# WebSocket Configuration
WS_PORT=3000
WS_HOST=localhost

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_CODEGEN=codellama
OLLAMA_MODEL_CHAT=mistral
OLLAMA_MODEL_ANALYSIS=llama2

# Security Configuration
JWT_SECRET=your-secret-key-here
CORS_ORIGIN=http://localhost:5173

# Sandbox Configuration
SANDBOX_MAX_EXECUTION_TIME=30000
SANDBOX_MAX_CONCURRENT_PROCESSES=5
SANDBOX_TEMP_DIR=./sandbox/temp

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Configuration
ENABLE_DEV_TOOLS=true
HOT_RELOAD=true

